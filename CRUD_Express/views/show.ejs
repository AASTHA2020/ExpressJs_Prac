<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/styles/styles.css">
  <title>Users</title>
</head>
<body>
  <div class="container">
    <h1>Users List</h1>
    <div class="user-list">
      <% users.forEach(user => { %>
        <div class="user-card">
          <img src="<%= user.img %>" alt="User Image" class="user-img">
          <h2><%= user.name %></h2>
          <p><%= user.email %></p>
          <a href="/users/<%= user._id %>/edit">Edit</a>
          <form action="/users/<%= user._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
